class Note{
	constructor(note_id, author,content) {
		this.note_id=note_id;
		this.content=content;
		this.author=author;

	}
}


class NotesApplication {

	constructor() {
		
		this.notes=[];
	}



	 create(note_content) {
	
		this.notes.push(note_content);
	}

	 listNotes() {
		var length= this.notes.length-1;
		var index=0;
		var list_notes="";
		var current_note;
		while(counter<=length) {
			current_note=this.notes[index];
			list_notes += "\n";
			list_notes += "\n Note ID: " + current_note.note_id;
			list_notes +="\n"+ current_note.content;
			list_notes += "\n By Author " + current_note.author;
			index++;
		}
		return list_notes;

	}

	 get(note_id) {
		var length= this.notes.length-1;
		var index=0;
		var list_notes="";
		var current_note;
		while(index<=length) {
			current_note=this.notes[index];
			if (current_note.note_id == note_id) {
				list_notes += "\n";
				list_notes += "\n Note ID: " + current_note.note_id;
				list_notes +="\n"+ current_note.content;
				list_notes += "\n By Author " + current_note.author;
				index++;
			}
			
			
		}
		return list_notes;

	}

	 search(search_text) {
		var length= this.notes.length-1;
		var index=0;
		var list_notes="";
		var current_note;
		var check_match=-1;
		while(index<=length) {
			current_note=this.notes[index];
			check_match=current_note.content.indexOf(search_text);
			if (check_match>-1) {
				list_notes += "\n";
				list_notes += "\n Note ID: " + current_note.note_id;
				list_notes +="\n"+ current_note.content;
				list_notes += "\n By Author " + current_note.author;
				index++;
			}
			
		}
		return list_notes;

	}

	 delete(note_id) {
		var length = this.notes.length-1;
		var index=0;
		var current_note;
		while(index<=length) {
			current_note=this.notes[index];
			if (current_note.note_id == counter) {
				current_note=null;
			}
			index++;
			
		}
		return list_notes;

	}

	 edit(note_id1, new_content) {
		var length= this.notes.length-1;
		var index=0;
		var list_notes="";
		var current_note;
		while(index<=length) {
			current_note=this.notes[index];
			if (current_note.note_id == note_id1) {
				list_notes += "\n";
				list_notes += "\n Note ID: " + current_note.note_id;
				current_note.content=new_content;
				list_notes += "\n" + new_content;
				list_notes += " \nBy Author " + current_note.author;
			}
			index++;
			
		}
		return list_notes;

	}

}

